{
  "name": "@bootkit/themes",
  "version": "5.0.0",
  "description": "Bootstrap 5 Themes",
  "author": "Bootkit",
  "license": "MIT",
  "homepage": "https://bootkitlib.github.io/",
  "repository": {
    "type": "git",
    "url": "https://github.com/bootkitlib/themes"
  },
  "keywords": [
    "bootstrap",
    "bootstrap-theme",
    "scss",
    "sass",
    "ui",
    "themes"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "sass src/scss:dist --load-path=node_modules",
    "publish-npm": "npm run build & npm publish --access public",
    "watch": "sass --watch scss:dist --load-path=node_modules",
    "build:rtl": "npm run build & rtlcss dist/light1/light1.css dist/light1/light1.rtl.css"
  },
  "peerDependencies": {
    "bootstrap": "^5.3.3"
  },
  "devDependencies": {
    "rtlcss": "^4.2.0",
    "sass": "^1.77.8"
  }
}
