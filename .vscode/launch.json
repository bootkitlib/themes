    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Agent",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "watch",
            ],
            "autoAttachChildProcesses": true,
            "restart": true,
            "sourceMaps": true,
            "stopOnEntry": false,
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"

            // "skipFiles": [
            //     "<node_internals>/**"
            // ],
            // "outFiles": [
            //     "${workspaceFolder}/dist/**/*.js"
            // ]
        }
    ]
}